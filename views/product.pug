extends layout

block content
  h1= product.name
  if product.imageUrl
    img(
      src=product.imageUrl,
      alt=product.name,
      style="width:200px; height:200px; object-fit:cover; border-radius:6px; display:block; margin-bottom:12px;"
    )
  p Price: $#{product.price}
  p Description: #{product.description}
  .btn-group
    a.btn(href='/cart', data-title=product.name, data-id=product.id, data-price=product.price) Add to Cart
    a.btn(href='/') Back

block scripts
  script.
    function viewContent(title, productId, price) {
      //dataLayer.push({ ecommerce: null });  // Clear the previous ecommerce object.
      dataLayer.push({
        event: "view_item",
        ecommerce: {
          currency: "AUD",
          value: price,
          items: [
            {
              item_id: productId,
              item_name: title,
              price: price,
              quantity: 1
            }
          ]
        }
      });
    }

    // Call viewContent on page load with product details
    document.addEventListener('DOMContentLoaded', function() {
      viewContent("#{product.name}", "#{product._id}", #{product.price});
    });