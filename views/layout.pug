      script.
        function addToCart(title, productId, price) {
          dataLayer.push({
            event: "add_to_cart",
            ecommerce: {
              currency: "AUD",
              value: price,
              items: [
                {
                  item_id: productId,
                  item_name: title,
                  price: price,
                  quantity: 1
                }
              ]
            }
          });
          console.log(`Added to DL`);
          console.log(`${JSON.stringify(dataLayer)}`);
        }