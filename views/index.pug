doctype html
html
  head
    title= title
  body
    h1 Product List
    ul
      each product in products
        li
          a(href=`/product/${product.id}`) #{product.name} - $#{product.price}
          |  | 
          a(href=`/cart`) Add to Cart
          |  | 
          a(href=`/purchase`) Purchase
