doctype html
html
  head
    title= title
    style.
      body {
        background: url('/img/abstract.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
      }
      .products-container {
        display: flex;
        flex-wrap: wrap;
        gap: 24px;
      }
      .product {
        background: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        margin: 20px 0;
        padding: 16px;
        max-width: 400px;
        flex: 1 1 300px;
      }
      .btn {
        display: inline-block;
        padding: 8px 18px;
        border-radius: 5px;
        border: none;
        background: linear-gradient(90deg, #757f9a 0%, #d7dde8 100%);
        color: #222;
        font-weight: bold;
        text-decoration: none;
        transition: transform 0.1s, box-shadow 0.1s;
        box-shadow: 0 2px 8px rgba(117,127,154,0.10);
        cursor: pointer;
      }
      .btn:hover {
        transform: translateY(-2px) scale(1.04);
        box-shadow: 0 4px 16px rgba(117,127,154,0.18);
        background: linear-gradient(90deg, #d7dde8 0%, #757f9a 100%);
        color: #222;
      }
      .product img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 6px;
        display: block;
        margin-bottom: 12px;
      }
      .btn-group {
        margin-top: 12px;
        display: flex;
        gap: 10px;
        flex-wrap: wrap; // Add this line to allow buttons to wrap if needed
      }
  body
    h1(style="font-size:2.5rem; color:#333; margin-bottom:0.5em; text-shadow:0 2px 8px #fff9; letter-spacing:2px;")
      | Discover Your Next Favorite Gadget!
    p(style="font-size:1.2rem; color:#444; margin-bottom:2em;")
      | Explore our curated selection of tech products, handpicked for quality and style.
    .products-container
      each product in products
        div.product
          h2= product.name
          if product.imageUrl
            img(src=product.imageUrl, alt=product.name, style="max-width:200px;")
          p Price: $#{product.price}
          .btn-group
            a.btn(href=`/product/${product.id}`) View Details
            a.btn(href=`/cart`) Add to Cart
          .btn-group
            a.btn(href=`/purchase`) Purchase
